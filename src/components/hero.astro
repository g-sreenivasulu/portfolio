---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/heroImage.jpg";
import square_heroImage from "assets/square_heroImage.jpeg"
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-2 pb-8 md:pt-12 md:pb-24">
  <div class="hidden sm:block md:pt-10 lg:pt-0 sm:pb-5 md:pb-0 md:order-1">
    <Picture
      width={380}
      height={507}
      src={heroImage}
      alt="Dr. Sreenivasulu Gogula"
      widths={[200, 400]}
      aspectRatio="3:4"
      sizes="(max-width: 800px) 100vw, 380px"
      loading="eager"
      format="webp"
      class={"rounded-md"}
    />
  </div>
  <div class="sm:hidden py-6 md:order-1">
    <Picture
      width={480}
      height={480}
      src={square_heroImage}
      alt="Dr. Sreenivasulu Gogula"
      widths={[200, 400]}
      aspectRatio="1:1"
      sizes="(max-width: 800px) 100vw, 480px"
      loading="eager"
      format="webp"
      class={"rounded-md"}
    />
  </div>
  <div>
    <h1
      class="text-2xl md:text-5xl font-bold lg:tracking-tight xl:tracking-tighter">
      Dr. Sreenivasulu Gogula
    </h1>
    <p class="text-base mt-4 max-w-xl">
      A Professor and HOD-AIML in a reputed Educational Institution, Dedicated to advancing
      the field of AI through innovative research, a focus on practical
      applications, and a commitment to excellence. Specializes in AI and ML
      with a focus on Deep Learning and Natural Language Processing.
      Accomplished author and researcher with multiple National and
      International patents.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/journals-and-conferences"
        class="flex gap-1 items-center justify-center"
        >
        <Icon pack="mdi" name="book" class="h-5"/>
        Journals & Conferences
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/patents"
        class="flex gap-1 items-center justify-center"
        >
        <Icon pack="mdi" name="certificate" class="h-5"/>
        Patents
      </Link>
    </div>
  </div>
</main>

