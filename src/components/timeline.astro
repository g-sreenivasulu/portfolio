---
const { title, subtitle, desc } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="bg-neutral/90 mt-1 block h-4 w-4 rounded-full"></span>
    <span
      class="education__line bg-neutral/80 block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <p class="mb-1 font-semibold">{title}</p>
    <span class="text-sm font-normal">{subtitle}</span>
  </div>
</div>
