---
const { title, subtitle, desc } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-neutral/90 block rounded-full mt-1"></span>
    <span class="education__line bg-neutral/80 block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <p class="font-semibold mb-1">{title}</p>
    <span class="font-normal text-sm">{subtitle}</span>
  </div>
</div>