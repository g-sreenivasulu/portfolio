---

<footer class="bg-[#141414] py-12 mt-20">
  <div class="container mx-auto lg:pl-28 flex justify-center">
    <div class="flex flex-wrap justify-center w-full">
      <div class="w-full md:w-1/4 mb-8 md:mb-0 px-4">
        <p class="text-white text-lg mb-4 leading-tight">Dr. G. Sreenivasulu </p>
        <button class="bg-white/95 hover:bg-white text-black font-semibold py-2 px-4 rounded">
          <a href="/contact">Contact</a>
        </button>
      </div>

      <div class="w-full md:w-1/4 mb-8 md:mb-0 px-4">
        <p class="text-white text-lg mb-4 leading-tight">Navigation</p>
        <ul class="text-white/70 leading-loose">
          {
            navigation.map(({title, path}) => (
              <li><a href={path} class="hover:text-white">{title}</a></li>
            ))
          }
        </ul>
      </div>

      <div class="w-full md:w-1/4 mb-8 md:mb-0 px-4">
        <p class="text-white text-lg mb-4 leading-tight">Socials</p>
        <ul class="text-white/70 leading-loose">
          {
            socials.map(({title, URL, target = "_blank"}) => (
              <li>
                <a
                  target = {target}
                  href={URL}
                  class="hover:text-white">{title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>

  <div class="text-center mb-2 mt-6"> 
    <a class="text-white/70 hover:underline" href="/terms">Terms</a>
  </div>

  <p class="text-center text-sm text-white/80">
