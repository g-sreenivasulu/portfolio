const navigation = [
  { title: "Home", path: "/" },
  { title: "Awards", path: "/awards" },
  { title: "Blog", path: "/blog" },
  { title: "Achievements", path: "/achievements" },
  { title: "Journals & Conferences", path: "/journals-and-conferences" },
  { title: "Patents", path: "/patents" },
  { title: "Book Chapters", path: "/book-chapters" },
  { title: "Books Published", path: "/books-published" },
  { title: "Resources", path: "/resources" },
];

const socials = [
  { title: "Email", URL: "mailto:contact@sreenivasulu.com", target: "_self"},
  { title: "LinkedIn", URL: "https://www.linkedin.com/in/g-sreenivasulu/"},
