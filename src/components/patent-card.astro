---
export interface Props {
  title: string;
  applicationNumber: number;
  dateFiled: string;
  granted: boolean;
}

const { title, applicationNumber, dateFiled, granted } = Astro.props;
---

<div class="m-4 p-4 border-2 rounded-lg">
  <p class="font-medium mb-1">{title}</p>
  <p class="my-1" >Application Number: {applicationNumber} {granted && <span> (Granted) </span>}</p>
  <p class="mt-1">{dateFiled}</p>
</div>
