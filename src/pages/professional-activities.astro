---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import professionalActivities from "@data/professional-activities.json";

const academic = professionalActivities.academic;
const professional = professionalActivities.professional;
---

<Layout title="Professional Activities">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Professional Activities</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>

    <div class="mx-auto max-w-4xl">
      <h3 class="text-2xl pt-4 pb-2 underline decoration-2 underline-offset-4">
        Academic Achievements
      </h3>

      <ul class="list-disc pl-5">
        {academic.map((value) => <li class="py-2">{value}</li>)}
      </ul>

      <h3 class="text-2xl pt-4 pb-2 underline decoration-2 underline-offset-4">
        Professional Achievements
      </h3>

      <ul class="list-disc pl-5">
        {professional.map((value) => <li class="py-2">{value}</li>)}
      </ul>
    </div>
  </Container>
</Layout>
