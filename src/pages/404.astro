---
import Container from "@components/container.astro";
import SectionHead from "@components/section-head.astro";
import Layout from "@layouts/Layout.astro";

---

<Layout title="Page Not Found">
    <Container>
        <SectionHead>
            <Fragment slot="title">404</Fragment>
            <Fragment slot="desc">Page Not Found</Fragment>
        </SectionHead>
        
        <main class="flex justify-center mt-8">
            <a href="/" class="border-2 border-neutral border-opacity-50 rounded-lg p-2" aria-label="Back to Home Page" >
                Back to Home
            </a>
        </main>

    </Container>
</Layout>