---
import Container from "@components/container.astro";
import SectionHead from "@components/section-head.astro";
import Layout from "@layouts/Layout.astro";

import j_and_c from "@data/journals-and-conferences.json";

const journals = [...j_and_c.journals].reverse();
const conferences = [...j_and_c.conferences].reverse();
---

<Layout title="Journals & Conferences">
  <Container>
    <SectionHead>
      <Fragment slot="title">Journals & Conferences</Fragment>
      <Fragment slot="desc">Journals Published and Conferences Attended by Dr. G. Sreenivasulu</Fragment>
    </SectionHead>

    <main class="mx-auto max-w-4xl">
      <h2 class="text-3xl font-semibold m-4 mt-8">Journals</h2>
      {
        journals.map((item) => (
          <div class="m-4 p-4 border-2 rounded-lg">{item}</div>
        ))
      }
      <h2 class="text-3xl font-semibold m-4">Conferences</h2>
      {
        conferences.map((item) => (
          <div class="m-4 p-4 border-2 rounded-lg">{item}</div>
        ))
      }
    </main>
  </Container>
</Layout>
