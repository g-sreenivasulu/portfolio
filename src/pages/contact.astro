---
import { Icon } from "astro-icon/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import SectionHead from "@components/section-head.astro";
import ContactForm from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <SectionHead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc"></Fragment>
    </SectionHead>

    <div class="mx-auto mt-16 grid max-w-4xl gap-10 md:grid-cols-2 lg:mt-32">
      <div>
        <p class="text-md mt-3 leading-relaxed text-slate-600">
          Thank you for visiting my portfolio website! If you have any
          questions, feedback, or would like to work with me, please don't
          hesitate to get in touch.
        </p>
        <div class="mt-5">
          <div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="size-4 text-gray-500" name="uil:map-marker" />
            <span>Hyderabad, India</span>
          </div><div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="size-4 text-gray-500" name="uil:envelope" /><a
              href="mailto:contact@sreenivasulu.com">contact@sreenivasulu.com</a
            >
          </div><div class="mt-2 flex items-center space-x-2 text-gray-600">
            <Icon class="size-4 text-gray-500" name="uil:linkedin" /><a
              target="_blank"
              href="https://www.linkedin.com/in/g-sreenivasulu/"
              >in/g-sreenivasulu</a
            >
          </div>
        </div>
      </div>
      <div>
        <ContactForm />
      </div>
    </div>
  </Container>
</Layout>
